[Unit]
Description=Pihole
After=docker.service
Requires=docker.service media-primary.mount

[Service]
EnvironmentFile=/etc/profile.env
TimeoutStartSec=0
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
ExecStartPre=-/usr/bin/docker pull pihole/pihole:latest
ExecStart=/opt/systemd-docker \
  --cgroups name=systemd \
  run --rm --name %n \
  --publish "53:53/udp" \
  --publish "53:53/tcp" \
  --publish "67:67/udp" \
  --publish "9093:9093" \
  --env TZ='America/New_York' \
  --env WEBPASSWORD="${WEBPASSWORD}" \
  --env DNSSEC=true \
  --env WEB_PORT=9093 \
  --volume "${PRIMARY_MOUNT}/pihole/etc-pihole/:/etc/pihole/" \
  --volume "${PRIMARY_MOUNT}/pihole/etc-dnsmasq.d/:/etc/dnsmasq.d/" \
  --dns 127.0.0.1 \
  --dns 1.1.1.1 \
  pihole/pihole:latest

[Install]
WantedBy=multi-user.target
